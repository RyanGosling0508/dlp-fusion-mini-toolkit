{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DLP-Fusion Knowledge Base",
  "type": "object",
  "required": ["tbox", "abox"],
  "properties": {
    "tbox": {
      "type": "object",
      "properties": {
        "classes": { "type": "array", "items": {"type": "string"} },

        "properties": { "type": "array", "items": {"type": "string"} },

        "subClassOf": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sub", "super"],
            "properties": {
              "sub": {"type": "string"},
              "super": {"type": "string"}
            }
          }
        },

        "subPropertyOf": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sub", "super"],
            "properties": {
              "sub": {"type": "string"},
              "super": {"type": "string"}
            }
          }
        },

        "inverseOf": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["p", "inv"],
            "properties": {
              "p": {"type": "string"},
              "inv": {"type": "string"}
            }
          }
        },

        "domain": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["property", "class"],
            "properties": {
              "property": {"type": "string"},
              "class": {"type": "string"}
            }
          }
        },

        "range": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["property", "class"],
            "properties": {
              "property": {"type": "string"},
              "class": {"type": "string"}
            }
          }
        },

        "transitiveProperty": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },

    "abox": {
      "type": "object",
      "properties": {
        "individuals": {
          "type": "array",
          "items": {"type": "string"}
        },

        "types": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["individual", "class"],
            "properties": {
              "individual": {"type": "string"},
              "class": {"type": "string"}
            }
          }
        },

        "relations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["property", "from", "to"],
            "properties": {
              "property": {"type": "string"},
              "from": {"type": "string"},
              "to": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
